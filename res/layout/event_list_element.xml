<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:paddingTop="@dimen/month_grid_padding">
    
   
    <TextView 
        android:id="@+id/event_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/event_title"
        android:hint="@string/hint_title"/>
    
    <TextView 
        android:id="@+id/event_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/default_text_size"
        android:textStyle="bold"
        android:layout_below="@id/event_list_title"/>
    
    <TextView
        android:id="@+id/event_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/default_text_size"
        android:textStyle="bold"
        android:layout_below="@id/event_list_title"
        android:layout_toRightOf="@id/event_list_date"
        android:hint="@string/hint_start_time"/>
    
    <TextView
        android:id="@+id/event_label_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/default_text_size"
        android:layout_below="@id/event_list_title"
        android:layout_toRightOf="@id/event_start_time"
        android:text="@string/label_to" />
    
    <TextView
        android:id="@+id/event_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/default_text_size"
        android:textStyle="bold"
        android:layout_below="@id/event_list_title"
        android:layout_toRightOf="@id/event_label_to"
        android:hint="@string/hint_end_time" />

    <TextView 
        android:id="@+id/event_list_venue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/default_text_size"
        android:layout_below="@id/event_list_date"
        android:hint="@string/hint_venue" />

	<TextView 
        android:id="@+id/event_list_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/default_text_size"
        android:layout_below="@id/event_list_venue"
        android:hint="@string/hint_notes"/>
    


</RelativeLayout>
